<%- include('../partials/header') %>

<section class="p-6 bg-white rounded-lg ">
  <h3 class="text-2xl font-bold mb-4 mt-20 text-center"><%= title %></h3>
  <table id="list" class="w-full text-left border-separate border-spacing-y-4">
      <thead>
          <tr class="bg-blue-200">
              <th class="p-2 rounded-tl-lg">Player Name</th>
              <th class="p-2">Position</th>
              <th class="p-2 rounded-tr-lg">Actions</th>
          </tr>
      </thead>
      <tbody>
          <% players.forEach(function(p) { %>
          <tr class="bg-white shadow-md hover:shadow-lg rounded-lg">
              <td class="p-4 rounded-l-lg"><%= p.playerName %></td>
              <td class="p-4"><%= p.position %></td>
              <td class="p-4 rounded-r-lg">
                  <a href="/players/<%= p._id %>" class="text-blue-600 hover:text-blue-800 font-semibold">DETAILS</a>
              </td>
          </tr>
          <% }); %>
      </tbody>
  </table>
</section>

<%- include('../partials/footer') %>
