<%- include('../partials/header') %>

<div>Before adding, please ensure that the team is not in the following list:</div>
<section id="badge-container">
  <% teams.forEach(function(t) { %>
    <article class="badge"><%= t.name %></article>
  <% }) %>
</section>

<form id="add-team-form" action="/teams" method="POST">
  <label>Team Name:</label>
  <input type="text" name="teamName">
  <label>Year founded:</label>
  <input type="date" name="founded">
  <input type="submit" value="Add Team">
</form>

<%- include('../partials/footer') %>
